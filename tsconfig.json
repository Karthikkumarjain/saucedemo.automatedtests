{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,

    /* Playwright & Node */
    "types": ["node", "@playwright/test"],
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* JSON & Imports */
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* Paths (optional but recommended) */
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@data/*": ["test-data/*"]
    },

    /* Output */
    "outDir": "dist",
    "sourceMap": true
  },

  "include": [
    "playwright.config.ts",
    "tests/**/*.ts",
    "pages/**/*.ts",
    "utils/**/*.ts",
    "test-data/**/*.json"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
